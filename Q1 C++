#include <iostream>
#include <cstring>
using namespace std;
#define SIZE 3

typedef struct Expression {
	char sign;
	char* arrNums[SIZE];
}Expression;

void createExpression(Expression & exp);
int sizeOfNum(int num);
char* toString(int num);
void calculation(Expression& exp);
int convert(char* str);
void printExpression(const Expression exp);


void main() {
	Expression exp;
	createExpression(exp);
	calculation(exp);
	printExpression(exp);
	for (int i = 0; i < SIZE; i++)
		delete[] exp.arrNums[i];
}

void createExpression(Expression& exp) {
	int num1, num2;
	cout << "Enter two nums" << endl;
	cin >> num1, cin >> num2;
	cout << "Enter math expression" << endl;
	cin >> exp.sign;
	exp.arrNums[0]=toString(num1);
	exp.arrNums[1]=toString(num2);

}
void calculation(Expression& exp) {
	int num1, num2, res;
	num1 = convert(exp.arrNums[0]);
	num2 = convert(exp.arrNums[1]);

	switch (exp.sign)
	{
	case ('+'):
		res = num1 + num2;
		break;

	case ('-'):
		if ((num1 - num2) < 0)
			res = num2 - num1;
		else
			res = num1 - num2;
		break;

	case ('*'):
		res = num1 * num2;
		break;

	case('/'):
		if (num2 == 0) {
			cout << "error" << endl;
			exit(1);
		}
		res = num1 / num2;
		break;

	case('%'):
		res = num1 % num2;
		break;
		
	default: 
		cout << "sign illegal" << endl;
		exit(1);
		break;
	}
	exp.arrNums[2] = toString(res);
}

void printExpression(const Expression exp){
	cout << exp.arrNums[0] << " " << exp.sign << " " << exp.arrNums[1] << " = " << exp.arrNums[2] << endl;
}

int sizeOfNum(int num) {
	if (num == 0)
		return 1;
	int sum = 0;
	while (num != 0) {
		num = num / 10;
		sum++;
	}
	return sum;
}

char* toString(int num) {
	int size = sizeOfNum(num);
	char* s = new char[size + 1];
	s[size] = '\0';
	for (int i = size; i >0; i--) {
		s[i-1] = '0' + (num % 10);
		num = num / 10;
	}
	return s;
}

int convert(char* str) {
	int i = 0,sum=0;
	while (str[i] != '\0') {
		sum = sum * 10 + (str[i] - '0');
		i++;
	}
	return sum;
}

#include <iostream>
using namespace std;
#define PI 3.14

float area(int a, int b);
float area(int A, int B, int h);
float area(int r);
float area(float R, float r);

void main() {
	int a, b, A, B, h, r;
	float R, z;
	cout << "Enter two sides into a triangle: ";
	cin >> a, cin >> b;
	cout << "Area = " << area(a, b) << endl;
	cout << "Enter the lengths the two trapeze bases and its height: ";
	cin >> A, cin >> B, cin >> h;
	cout <<"Area = " << area(A, B, h) << endl;
	cout << "Enter radius length: ";
	cin >> r;
	cout <<"Area = " << area(r) << endl;
	cout << "Enter two radius sizes to calculate the area of a partial circle: ";
	cin>>R, cin>>z;
	cout  << "Area = " << area(R, z) << endl;


}

float area(int a, int b) {
	return (float)((a * b) / 2);
}

float area(int a, int b, int h) {
	return (float)(((a + b) / 2) * h);
}

float area(int r) {
	return (float)(PI * r * r);
}

float area(float R, float r) {
	return(float)(PI * (R * R - r * r));
}

#include <iostream>
using namespace std;
#define MAX 100
char** breakString(char* str, int& size);

void main()
{
	cout << "Enter a sentence:" << endl;
	char* sent = new char[MAX];
	cin.getline(sent, MAX);
	int size=0;
	char** newsent = breakString(sent, size);
	for (int i = 0; i < size; i++) {
		cout << newsent[i]<<endl;
	}
	cout << size;
	delete[] newsent;
}

char** breakString(char* str,int& size) {
	int count = 1,sum=1,j;
	char* p = str;
	char** stemp = new char*[count];
	while (*p != '\0') {
		if (*p == ' ')
			count++;
		p++;
	}
	p = str;
	for (int i = 0; i < count; i++) {
		while (*p!= ' ') {
			if (*p == '\0')
				break;
			sum++;
			p++;
		}
		stemp[i] = new char[sum];
		for ( j = 0; j < sum; j++) {
			stemp[i][j] = *str;
				str++;
		}
		stemp[i][j] = '\0';
		p++;
		sum = 1;
	}
	size = count;
	return stemp;

}


